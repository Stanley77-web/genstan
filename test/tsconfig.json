	"compilerOptions": {
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"target": "es2017",
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"noImplicitAny": true
	},
	"exclude": ["./src/**/*.spec.ts"]
}
